input {
  relp {
    port => {{ relp_port }}
    codec => "json"
    tags => [ "syslog" ]
  }
  redis {
    key => "logstash"
    host => "{{ redis_host }}"
    data_type => "list"
  }
}

filter {
  if [type] == "windshaft" {
    date {
      match => [ "timestamp", "E, dd MMM yyyy HH:mm:ss z" ]
    }
  }
}

output {
  elasticsearch {
    embedded => false
    host => "localhost"
    protocol => "http"
    cluster => "{{ elasticsearch_cluster_name }}"
  }
}
